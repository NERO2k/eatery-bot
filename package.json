{
  "name": "lunchbot",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node --experimental-modules --es-module-specifier-resolution=node src/index.js",
    "start-dev": "nodemon --experimental-modules --es-module-specifier-resolution=node src/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "nodemonConfig": {
    "delay": "200",
    "ignore": [
      "node_modules/*",
      "src/*"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  },
  "dependencies": {
    "axios": "^0.19.0",
    "chalk": "^3.0.0",
    "discord.js": "^11.5.1",
    "dotenv": "^8.2.0",
    "moment": "^2.24.0",
    "node-schedule": "^1.3.2",
    "node-tesseract-ocr": "^1.0.0",
    "sequelize": "^5.21.2",
    "sqlite3": "^4.1.0",
    "tweetnacl": "^1.0.1"
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "nodemon": "^1.19.4",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1"
  },
  "type": "module"
}
